{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "parser": "babel-eslint",
  "plugins": ["react"],
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "no-constant-condition": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  }
}
